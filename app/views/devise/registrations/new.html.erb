<h2>Sign up</h2>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal' }) do |f| %>
  <%= display_base_errors resource %>
  <%= f.input :name, :autofocus => true %>
  <%= f.input :email, :required => true %>
  <%= f.input :time_zone, priority: /US/ %>
  <%= f.input :password, :required => true %>
  <%= f.input :password_confirmation, :required => true %>
  <div class="form-actions">
    <%= f.button :submit, 'Sign up', :class => 'btn-primary' %>
    <%= link_to("<i class=\"icon icon-facebook\"></i> Sign in with Facebook".html_safe, oauth_user_path("me"), class: 'btn btn-danger') %>
    <%= link_to("<i class=\"icon icon-twitter\"></i> Sign in with Twitter".html_safe, twitter_oauth_user_path("me"), class: 'btn btn-danger') %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
