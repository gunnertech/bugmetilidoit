<%- model_class = Task -%>
<div class="page-header">
  <h1><%= @task.title %></h1>
</div>


<div class="form-actions">
  <% if can?(:create, AssignedTask) %>
    <%= link_to "Do This", new_user_assigned_task_path("me", task_id: resource.id), :class => 'btn-primary btn' %>
  <% end %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_task_path(@task), :class => 'btn' if can?(:update, resource) %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              task_path(@task),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger'  if can?(:destroy, resource) %>
</div>
